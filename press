<!DOCTYPE html>
<html>
<head>
  <title>Press Release Generator</title>
  <style>
    body { font-family: Arial; max-width: 600px; margin: 20px auto; }
    textarea, button { width: 100%; margin: 10px 0; }
    #output { white-space: pre-line; border: 1px solid #ddd; padding: 10px; }
  </style>
</head>
<body>
  <h2>Press Release Generator</h2>
  <input id="apiKey" type="password" placeholder="sk-2f278ac2f87d478c9a04de786f71270c">
  <input id="topic" placeholder="Topic (e.g., 'Company X Launches New Product')">
  <textarea id="keyPoints" rows="3" placeholder="Key points (one per line)"></textarea>
  <button onclick="generate()">Generate</button>
  <div id="output"></div>

  <script>
    async function generate() {
      const apiKey = document.getElementById("apiKey").value;
      const prompt = `Write a press release about "${document.getElementById("topic").value}". Key points:\n${
        document.getElementById("keyPoints").value.split('\n').map(p => `- ${p}`).join('\n')
      }\n\nFormat with headline, dateline, body, and boilerplate.`;

      document.getElementById("output").textContent = "Generating...";
      
      try {
        const response = await fetch("https://api.deepseek.com/v1/chat/completions", {
          method: "POST",
          headers: { 
            "Authorization": `Bearer ${apiKey}`,
            "Content-Type": "application/json" 
          },
          body: JSON.stringify({
            model: "deepseek-chat",
            messages: [{ role: "user", content: prompt }]
          })
        });
        const data = await response.json();
        document.getElementById("output").textContent = data.choices[0].message.content;
      } catch (error) {
        document.getElementById("output").textContent = "Error: " + error.message;
      }
    }
  </script>
</body>
</html>
